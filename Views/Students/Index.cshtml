@model IEnumerable<StudentDetails.Models.Students>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CratedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marks)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CratedDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.StudId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.StudId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.StudId">Delete</a>
                </td>
            </tr>
            
        }
    </tbody>
</table>
<form>
    <div>
        <a asp-controller="Home" asp-action="LoginTable">Log Out</a>
    </div>
</form>
